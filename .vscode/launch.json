{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Debug Particle system",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/Particle_system", 
			"args": ["10000", "sphere"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"preLaunchTask": "Build PS",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}